<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_railway2/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
                label="COM_RAILWAY2_ID"
                required="true"
                class="input-xlarge"
        />
        <field
                name="alias"
                type="text"
                label="COM_RAILWAY2_DIRECTION_ALIAS"
                required="true"
                class="input-xlarge validate-name"
                autocomplete="off"
        />
        <field
                name="title"
                type="text"
                label="COM_RAILWAY2_STATION_NAMES"
                class="input-xlarge validate-name"
                autocomplete="off"
        />
        <field
                name="telegram"
                type="list"
                label="COM_RAILWAY2_TELEGRAM"
                class="input-xlarge"
                description="COM_RAILWAY2_TELEGRAM_AVALIBLE"
                >
                <option value="0">COM_RAILWAY2_TELEGRAM_NOAVALIBLE</option>
                <option value="1">COM_RAILWAY2_TELEGRAM_AVALIBLE</option>
        </field>
        <field
                name="color"
                type="color"
                label="COM_RAILWAY2_COLOR"
                class="input-xlarge validate-name"
                required="true"
                autocomplete="off"
        />
        <field
                name="font"
                type="color"
                label="COM_RAILWAY2_COLOR_TEXT"
                description="COM_RAILWAY2_COLOR_TEXT_DESC"
                class="input-xlarge validate-name"
                required="true"
                autocomplete="off"
        />
    </fieldset>
</form>