<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_railway2/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="stationID"
                type="stationname"
                label="COM_RAILWAY2_STATION_NAME"
                description="COM_RAILWAY2_STATION_NAME_DESC"
                required="true"
                class="input-xlarge"
        />
        <field
                name="turnstiles"
                type="Turnstile"
                label="COM_RAILWAY2_STATION_TURNSTILE"
                description="COM_RAILWAY2_STATION_TURNSTILE_DESC"
                class="input-xlarge"
        />
        <field
                name="tpd"
                type="list"
                label="COM_RAILWAY2_TPDS"
                description="COM_RAILWAY2_TPDS_DESC"
                class="input-xlarge"
                >
            <option value="0">COM_RAILWAY2_NO</option>
            <option value="1">COM_RAILWAY2_YES</option>
        </field>
        <field
                name="time_1"
                type="text"
                label="COM_RAILWAY2_STATION_DESC_START"
                description="COM_RAILWAY2_STATION_DESC_TIME_DESC"
                hint="COM_RAILWAY2_STATION_DESC_TIME_HINT"
                class="input-xlarge validate-desctime"
                autocomplete="off"
        />
        <field
                name="time_2"
                type="text"
                label="COM_RAILWAY2_STATION_DESC_END"
                description="COM_RAILWAY2_STATION_DESC_TIME_DESC"
                hint="COM_RAILWAY2_STATION_DESC_TIME_HINT"
                class="input-xlarge validate-desctime"
                autocomplete="off"
        />
        <field
                name="timemask"
                type="list"
                label="COM_RAILWAY2_TIMEMASK"
                description="COM_RAILWAY2_TIMEMASK_DESC"
                class="input-xlarge validate-desctime"
                >
            <option value="1111111">COM_RAILWAY2_TIMEMASK_1111111</option>
            <option value="1111100">COM_RAILWAY2_TIMEMASK_1111100</option>
            <option value="0000011">COM_RAILWAY2_TIMEMASK_0000011</option>
            <option value="1111000">COM_RAILWAY2_TIMEMASK_1111000</option>
            <option value="0000110">COM_RAILWAY2_TIMEMASK_0000110</option>
            <option value="1111110">COM_RAILWAY2_TIMEMASK_1111110</option>
            <option value="0000010">COM_RAILWAY2_TIMEMASK_0000010</option>
            <option value="0000001">COM_RAILWAY2_TIMEMASK_0000001</option>
        </field>
        <field
                name="time_check"
                type="calendar"
                label="COM_RAILWAY2_ACTUAL_BEFORE"
                description="COM_RAILWAY2_ACTUAL_BEFORE_DESC"
                translateformat="true"
        />
        <field
                name="detour"
                type="editor"
                label="COM_RAILWAY2_DETOUR"
                description="COM_RAILWAY2_DETOUR_DESCRIPTION"
                filter="raw"
                autocomplete="off"
        />
        <field
                name="thanks"
                type="user"
                label="COM_RAILWAY2_THANKS"
                description="COM_RAILWAY2_THANKS_DESC"
                class="input-xlarge validate-desctime"
        />
    </fieldset>
</form>