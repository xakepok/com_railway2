<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_railway2/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="directionID"
                type="direction"
                label="COM_RAILWAY2_DIRECTION"
                required="true"
                class="input-xlarge"
        />
        <field
                name="inspection"
                type="editor"
                label="COM_RAILWAY2_INSPECTIONS"
                description="COM_RAILWAY2_INSPECTIONS_DESC"
                filter="raw"
                autocomplete="off"
        />
        <field
                name="cocon"
                type="list"
                label="COM_RAILWAY2_INSPECTIONS_COCON"
                description="COM_RAILWAY2_INSPECTIONS_COCON_DESC"
                class="input-xlarge"
                >
            <option value="0">COM_RAILWAY2_NO</option>
            <option value="1">COM_RAILWAY2_YES</option>
        </field>
        <field
                name="info"
                type="editor"
                label="COM_RAILWAY2_INSPECTIONS_INFO"
                description="COM_RAILWAY2_INSPECTIONS_INFO_DESC"
                filter="raw"
                autocomplete="off"
        />
    </fieldset>
</form>