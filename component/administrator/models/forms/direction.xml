<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_railway2/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="stationID"
                type="stationName"
                label="COM_RAILWAY2_STATION_NAME"
                description="COM_RAILWAY2_STATION_NAME_DESC"
                required="true"
                class="input-xlarge validate-name"
                labelclass="control-label"
        />
        <field
                name="directionID"
                type="direction"
                label="COM_RAILWAY2_DIRECTION"
                description="COM_RAILWAY2_DIRECTION"
                class="input-xlarge"
                labelclass="control-label"
        />
        <field
                name="isControlPoint"
                type="list"
                label="COM_RAILWAY2_CONTROL_POINT"
                description="COM_RAILWAY2_CONTROL_POINT"
                class="input-xlarge">
                <option value="0">COM_RAILWAY2_NO</option>
                <option value="1">COM_RAILWAY2_YES</option>
        </field>
        <field
                name="indexID"
                type="text"
                label="COM_RAILWAY2_STATION_INDEX"
                description="COM_RAILWAY2_STATION_INDEX"
                class="input-xlarge"
                labelclass="control-label"
        />
        <field
                name="zoneID"
                type="text"
                label="COM_RAILWAY2_STATION_ZONE"
                description="COM_RAILWAY2_STATION_ZONE"
                class="input-xlarge"
                labelclass="control-label"
        />
    </fieldset>
</form>