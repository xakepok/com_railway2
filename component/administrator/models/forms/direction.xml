<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_railway2/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="stationID"
                type="stationName"
                label="COM_RAILWAY2_STATION_NAME"
                description="COM_RAILWAY2_STATION_NAME_DESC"
                required="true"
                class="input-xlarge validate-name"
                labelclass="control-label"
        />
        <field
                name="directionID"
                type="direction"
                label="COM_RAILWAY2_DIRECTION"
                description="COM_RAILWAY2_DIRECTION_DESCIPTION"
                class="input-xlarge"
                labelclass="control-label"
        />
        <field
                name="isControlPoint"
                type="list"
                label="COM_RAILWAY2_CONTROL_POINT"
                description="COM_RAILWAY2_CONTROL_POINT_DESCRIPTION"
                class="input-xlarge">
                <option value="0">COM_RAILWAY2_NO</option>
                <option value="1">COM_RAILWAY2_YES</option>
        </field>
        <field
                name="indexID"
                type="text"
                label="COM_RAILWAY2_STATION_INDEX"
                description="COM_RAILWAY2_STATION_INDEX_DESCRIPTION"
                class="input-xlarge validate-index"
                labelclass="control-label"
                autocomplete="off"
        />
        <field
                name="zoneID"
                type="text"
                label="COM_RAILWAY2_STATION_ZONE"
                description="COM_RAILWAY2_STATION_ZONE_DESCRIPTION"
                class="input-xlarge validate-zone"
                labelclass="control-label"
                autocomplete="off"
        />
        <field
                name="level"
                type="list"
                label="COM_RAILWAY2_LEVEL"
                description="COM_RAILWAY2_LEVEL_DESCRIPTION"
                class="input-xlarge">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </field>
        <field
                name="startLevel"
                type="list"
                label="COM_RAILWAY2_STATION_START_LEVEL"
                description="COM_RAILWAY2_STATION_START_LEVEL_DESC"
                class="input-xlarge">
            <option value="0">COM_RAILWAY2_NO</option>
            <option value="1">COM_RAILWAY2_YES</option>
        </field>
        <field
                name="distance"
                type="text"
                label="COM_RAILWAY2_DISTANCE_KM"
                description="COM_RAILWAY2_DISTANCE_KM_EDSCRIPTION"
                class="input-xlarge"
                labelclass="control-label validate-distance"
                autocomplete="off"
        />
    </fieldset>
</form>