<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_railway2/models/rules">
    <fieldset name="names">
        <field
                name="id"
                type="hidden"
        />
        <field
                name="stationID"
                type="stationName"
                label="COM_RAILWAY2_STATION_NAME_DESC"
                description="COM_RAILWAY2_STATION_NAME_DESC"
                required="true"
                class="input-xlarge"
        />
        <field
                name="popularName"
                type="text"
                label="COM_RAILWAY2_STATION_POPULAR_NAME"
                description="COM_RAILWAY2_STATION_POPULAR_NAME_DESC"
                required="true"
                class="input-xlarge validate-name"
                autocomplete="off"
        />
        <field
                name="yandexName"
                type="text"
                label="COM_RAILWAY2_STATION_YANDEX_NAME"
                description="COM_RAILWAY2_STATION_YANDEX_NAME_DESC"
                class="input-xlarge validate-name"
                autocomplete="off"
        />
        <field
                name="rzdName"
                type="text"
                label="COM_RAILWAY2_STATION_RZD_NAME"
                description="COM_RAILWAY2_STATION_RZD_NAME_DESC"
                class="input-xlarge validate-name"
                autocomplete="off"
        />
        <field
                name="displayBothNames"
                type="list"
                label="COM_RAILWAY2_STATION_DISPLAY_NAMES"
                description="COM_RAILWAY2_STATION_DISPLAY_NAMES_DESC"
                class="input-xlarge">
                <option value="0">COM_RAILWAY2_STATION_DISPLAY_NAMES_POPULAR</option>
                <option value="1">COM_RAILWAY2_STATION_DISPLAY_NAMES_ALL</option>
        </field>
    </fieldset>
</form>